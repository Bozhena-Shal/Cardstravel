{
  "ts-node": {
    "files": true,

    "transpileOnly": true,

    "esm": true
  },

  "compilerOptions": {
    "outDir": "./dist",

    "allowJs": true,

    "allowSyntheticDefaultImports": true,

    "downlevelIteration": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "noFallthroughCasesInSwitch": true,

    "noImplicitAny": true,

    "skipLibCheck": true,

    "strict": true,

    "sourceMap": true,

    "resolveJsonModule": true,

    "inlineSources": true,

    "isolatedModules": false,

    "lib": ["ES2021"],

    "baseUrl": ".",

    "paths": {
      "*": ["*", "*.ts", "*.js"]
    },

    "module": "CommonJS",

    "target": "ESNext"
  },

  "include": ["src"]
}
